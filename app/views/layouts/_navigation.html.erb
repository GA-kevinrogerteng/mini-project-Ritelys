<%# navigation styled for Bootstrap 3.0 %>
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Home', root_path, class: 'navbar-brand' %>
      <!-- added a nav bar for signing in and out -->
      <% if signed_in? %>
              <%= link_to 'View All Ritleys', show_all_path, class: 'navbar-brand' %>
              <%= link_to "My profile", current_user, class: 'navbar-brand' %>
              <%= link_to "Sign out", signout_path, method: "delete", class: 'navbar-brand'%>

      <% else %>
              <%= link_to "Sign up", signup_path, class: 'navbar-brand' %>
              <%= link_to "Sign in", signin_path, class: 'navbar-brand' %>
      <% end %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <%= render 'layouts/navigation_links' %>
      </ul>
    </div>
  </div>
</nav>
